# Backend specific .env.example for FastAPI application
# This file should be copied to .env and populated with actual values.
# DO NOT COMMIT .env TO VERSION CONTROL!

# Application Settings
APP_NAME="FastAPI Monorepo Backend"
APP_VERSION="1.0.0"
DEBUG=True # Set to False in production

# Database Connection (for backend service)
DATABASE_URL="postgresql://devuser:devpassword@db:5432/devdb"

# Security Settings
SECRET_KEY="your_super_secret_key_for_fastapi_jwt_or_session_management"
# Generate a strong secret key: openssl rand -hex 32
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (adjust for production)
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS="*"
CORS_ALLOW_HEADERS="*"

# Logging Level
LOG_LEVEL="INFO" # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Metrics (for Prometheus)
METRICS_ENABLED=True