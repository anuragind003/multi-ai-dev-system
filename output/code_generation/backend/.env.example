# Backend Environment Variables (FastAPI)

# Database Configuration
# For PostgreSQL: postgresql://user:password@host:port/database_name
DATABASE_URL=postgresql://user:password@db:5432/dev_db

# Application Settings
APP_NAME="FastAPI Backend"
APP_VERSION="1.0.0"

# Security Settings
# Generate a strong secret key for production: openssl rand -hex 32
SECRET_KEY="your_super_secret_key_for_development_only"
ALGORITHM="HS256" # JWT algorithm

# Environment Mode
# Set to "False" for production to disable debug features
DEBUG=True

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# External Service Integrations (Example)
# SENTRY_DSN=https://examplepublickey@o0.ingest.sentry.io/0
# EXTERNAL_API_KEY=your_external_api_key